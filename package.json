{
  "name": "miot-design",
  "version": "1.6.9",
  "description": "miot-design",
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "homepage": "https://github.com/shengyongheng/miot-design#readme",
  "bugs": {
    "url": "https://github.com/shengyongheng/miot-design/issues"
  },
  "repository": "https://github.com/shengyongheng/miot-design",
  "license": "MIT",
  "author": "hengshengyong <3271660881@qq.com> (https://github.com/shengyongheng)",
  "main": "dist/module/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "docs:build": "dumi build",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "dotenv release-it",
    "start": "dumi dev",
    "test": "jest",
    "typescript": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    },
    "root": true
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "preset": "react-native"
  },
  "dependencies": {
    "@babel/runtime": "7.7.7",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "core-js": "^3.8.2",
    "dotenv-cli": "^4.0.0",
    "dumi-theme-mobile": "^1.0.0",
    "lodash": "^4.17.21",
    "prop-types": "15.7.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "7.3.0",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/preset-env": "^7.28.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@umijs/test": "^3.0.5",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "pod-install": "^0.1.0",
    "release-it": "^14.2.2"
  },
  "peerDependencies": {
    "mhui-rn": "^1.17.64",
    "react": "^16.9.0",
    "react-native": "^0.61.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }
}
